{
    "rules": {
        "eofline": true,
        "indent": [
            true,
            "spaces"
        ],
        "linebreak-style": [
            true,
            "LF"
        ],
        "max-classes-per-file": [
            true,
            1
        ],
        "no-default-export": true,
        "no-require-imports": true,
        "no-trailing-whitespace": true,
        "object-literal-sort-keys": true,
        "prefer-const": true,
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ]
    }
}